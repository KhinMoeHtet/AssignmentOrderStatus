<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDCDADA"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
        android:layout_width="match_parent"

        >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImgOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintStart_toStartOf="@id/cardViewOne"
        app:layout_constraintTop_toTopOf="@id/cardViewOne">

        <ImageView
            android:id="@+id/ImgOne"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pet"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/txtJack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintStart_toStartOf="@id/cardViewOne"
        app:layout_constraintTop_toBottomOf="@id/cardViewImgOne">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jack Jack"
            android:textColor="#FFFFFF"
            android:textSize="16sp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/txtLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintStart_toStartOf="@id/cardViewOne"
        app:layout_constraintTop_toBottomOf="@id/txtJack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 4"
            android:textColor="#EEFFFFFF"
            android:textSize="16sp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/txtExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintStart_toStartOf="@id/cardViewOne"
        app:layout_constraintTop_toBottomOf="@id/txtLevel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp Points: 4,000"
            android:textSize="16sp"


            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSms"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintTop_toTopOf="@id/cardViewOne"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sms" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNote"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintTop_toBottomOf="@id/cardViewSms"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notes" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#2EA2FF"
        app:layout_constraintEnd_toEndOf="@id/cardViewOne"
        app:layout_constraintTop_toBottomOf="@id/cardViewNote"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTwo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewOne">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewTwo"
        app:layout_constraintStart_toStartOf="@id/cardViewTwo"
        app:layout_constraintTop_toTopOf="@id/cardViewTwo">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_box" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/cardViewTwo"
        app:layout_constraintEnd_toEndOf="@id/cardViewTwo"
        app:layout_constraintStart_toStartOf="@id/cardViewTwo"
        app:layout_constraintTop_toTopOf="@id/cardViewTwo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Status"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewTwo"
        app:layout_constraintEnd_toEndOf="@id/cardViewTwo"
        app:layout_constraintTop_toTopOf="@id/cardViewTwo"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down_arrow" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/utilitiesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Utilities"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewTwo" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/utilitiesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/utilitiesTxt"

        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewThree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/utilitiesRecycler">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewThree"
        app:layout_constraintStart_toStartOf="@id/cardViewThree"
        app:layout_constraintTop_toTopOf="@id/cardViewThree"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20sp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewThree"
        app:layout_constraintEnd_toEndOf="@id/cardViewThree"
        app:layout_constraintTop_toTopOf="@id/cardViewThree"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/front_arrow" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFour"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewThree">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewFour"
        app:layout_constraintStart_toStartOf="@id/cardViewFour"
        app:layout_constraintTop_toTopOf="@id/cardViewFour"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Methods"
            android:textSize="20sp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewFour"
        app:layout_constraintEnd_toEndOf="@id/cardViewFour"
        app:layout_constraintTop_toTopOf="@id/cardViewFour"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/front_arrow" />

    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>